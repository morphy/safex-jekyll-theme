<div class="grid grid-cols-1 lg:grid-cols-3 gap-8 mb-20">
  <div>
    <img
      src="{{ site.data.info.logo | relative_url }}"
      alt="Safex"
      class="w-[150px] mb-8 brightness-0 invert-[1]"
    >

    <p class="text-white leading-6">{{ site.data.info.description }}</p>
  </div>

  <div>
    <h4 class="text-white text-base uppercase mb-8 tracking-wider font-medium">Szybkie linki</h4>

    <div class="flex flex-row gap-8">
      <ul>
        {% assign menuPages = site.pages | sort: 'order' %}

        {% for menuPage in menuPages %}
          {% unless menuPage.hideInNav %}
            <li class="flex py-2 text-xs text-gray-450 relative before:content-['\25B8'] before:pr-5">
              <a
                class="hover:text-red-500 duration-200 block"
                href="{{ menuPage.url | relative_url | remove: 'index.html' }}"
              >
                {{ menuPage.title }}
              </a>
            </li>
          {% endunless %}
        {% endfor %}
      </ul>

      <ul>
        {% assign menuPages = site.emptyArray %}

        {% for collection in site.collections %}
          {% if collection.label == 'posts' %}
            {% continue %}
          {% endif %}

          {% assign path = collection.label | prepend: '_' | append: '/index.md' %}
          {% assign collectionPage = collection.docs | where: 'path', path | first %}

          {% assign menuPages = menuPages | push: collectionPage %}
        {% endfor %}

        {% assign menuPages = menuPages | sort: 'order' %}

        {% for menuPage in menuPages %}
          {% unless menuPage.hideInNav %}
            <li class="flex py-2 text-xs text-gray-450 relative before:content-['\25B8'] before:pr-5">
              <a
                class="hover:text-red-500 duration-200 block"
                href="{{ menuPage.url | relative_url | remove: 'index.html' }}"
              >
                {{ menuPage.title }}
              </a>
            </li>
          {% endunless %}
        {% endfor %}
      </ul>
    </div>
  </div>

  <div>
    <iframe
      class="w-full h-full border-0 min-h-80"
      src="https://www.google.com/maps/embed/v1/place?q=Safex+Krzysztof+Skodowski,+Potasowa,+Gdynia,+Polska&amp;key=AIzaSyBFw0Qbyq9zTFTd-tUY6dZWTgaQzuU17R8"
    ></iframe>
  </div>
</div>
