<div class="bg-gray-750">
  <div class="container grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 py-8">
    {% for service in page.heroServices %}
      <div class="flex gap-8 items-center">
        <div class="size-12 *:fill-white shrink-0">
          {% assign iconPath = 'icons/' | append: service.icon | append: '.svg' %}
          {% include {{ iconPath }} %}
        </div>

        <div class="text-white">
          <h3 class="text-xl">{{ service.title }}</h3>
          <p class="text-sm">{{ service.text }}</p>
        </div>
      </div>
    {% endfor %}
  </div>
</div>
